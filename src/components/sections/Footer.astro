---
import Image from 'astro/components/Image.astro';
---

<footer class="bg-[#C8F600] shadow-sm backdrop-blur-lg h-fit">
  <div
    class="w-full flex md:items-center md:px-[80px] px-[30px] font-[inter-regular] bg-black md:text-sm text-[10px]"
  >
    <div class="w-full flex items-center justify-center md:gap-28 gap-16 p-4">
      <Image
        src="/img/kubota.webp"
        alt="Kubota Logo"
        class="md:w-[8%] aspect-auto w-[20%]"
        loading="lazy"
        width={200}
        height={200}
      />
      <Image
        src="/img/disagro.webp"
        alt="Disagro Logo"
        class="md:w-[8%] aspect-auto w-[20%]"
        loading="lazy"
        width={200}
        height={200}
      />
      <Image
        src="/img/kobelco.webp"
        alt="Kobelco Logo"
        class="md:w-[8%] aspect-auto w-[20%]"
        loading="lazy"
        width={200}
        height={200}
      />
    </div>
  </div>
  <div class="flex">
    <div
      class="md:px-[80px] px-[30px] md:py-12 py-8 w-full flex md:flex-row flex-col-reverse justify-between items-center md:gap-0 gap-y-4"
    >
      <div class="flex items-center md:text-base text-xs md:flex-col gap-4">
        <p class="font-[inter-regular] md:block hidden">
          <strong>CONTACTANOS</strong>
        </p>
        <p>CORREO</p>
        <p>TELEFONO</p>
      </div>
      <div class="flex flex-col items-center md:gap-3 gap-3">
        <div class="flex gap-5 items-center">
          <p class="font-[microgramma] md:text-2xl text-lg text-center">
            INFIERNO VERDE 2025
          </p>
        </div>
        <hr class="w-full border-2" />
        <div class="flex gap-3 items-center md:text-lg text-xs">
          <a
            href="https://www.facebook.com/profile.php?id=100064534818604"
            target="_blank"
            ><p
              class="rounded-full md:size-9 size-7 flex items-center justify-center bg-black text-[#C8F600]"
            >
              <i class="fa-brands fa-facebook-f"></i>
            </p></a
          >
          <a
            href="https://www.instagram.com/infiernoverdetarapoto/"
            target="_blank"
            ><p
              class="rounded-full md:size-9 size-7 flex items-center justify-center bg-black text-[#C8F600]"
            >
              <i class="fa-brands fa-instagram"></i>
            </p></a
          >
          <p
            class="rounded-full md:size-9 size-7 flex items-center justify-center bg-black text-[#C8F600]"
          >
            <i class="fa-solid fa-phone-volume"></i>
          </p>
        </div>
        <hr class="w-full border-2 md:hidden block" />
      </div>
      <div class="items-center flex-col gap-4 md:flex hidden">
        <p class="font-[inter-regular]"><strong>FECHAS</strong></p>
        <p>AGOSTO 23</p>
        <p>AGOSTO 24</p>
      </div>
    </div>
  </div>
  <div
    class="w-full p-4 flex md:items-center justify-between md:px-[80px] px-[30px] font-[inter-regular] bg-black md:text-sm text-[10px]"
  >
    <span class="text-gray-500 sm:text-center dark:text-[#C8F600]/80"
      >Designed by <a
        href="https://github.com/Dh4r10"
        target="_blank"
        class="hover:underline">Dh4rio</a
      >.
    </span>

    <span class="text-gray-500 sm:text-center dark:text-[#C8F600]/80"
      >All rights reserved. Â© 2025 <a
        href="https://github.com/Dh4r10"
        target="_blank"
        class="hover:underline">D410</a
      >
    </span>
  </div>
</footer>

<style>
  .radial-gradient-background {
    background: radial-gradient(
      ellipse 72% 70% at center,
      rgba(0, 0, 0, 0.7) 0%,
      rgba(0, 0, 0, 0.5) 15%,
      rgba(0, 0, 0, 0) 70%
    );
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
  }
</style>
