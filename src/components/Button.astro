---
type ButtonType = 'default' | 'outlined';

interface Props {
  type?: ButtonType;
}

const { type = 'default' } = Astro.props;

const typeClassMap: Record<ButtonType, string> = {
  default: 'bg-[#c8f600] text-black hover:bg-[#CFE862]',
  outlined:
    'bg-transparent text-[#c8f600] outline outline-2 outline-[#c8f600] hover:bg-[#C8F600]/15',
};

const baseClass =
  'vehicle-card cursor-pointer md:px-[24px] px-[10px] md:py-[10px] py-[5px] font-[inter-semiBold] md:text-[15px] text-[6px]';

const finalClass = `${baseClass} ${typeClassMap[type]} ${type}`;
---

<button class={finalClass}>
  <slot />
</button>

<style>
  .vehicle-card {
    background: linear-gradient(
      180deg,
      rgba(0, 0, 0, 0) 0%,
      rgba(0, 0, 0, 0.05) 17.79%,
      rgba(0, 0, 0, 0.2) 74%,
      rgba(0, 0, 0, 0.6) 83%,
      #000 90%
    );
    background-color: transparent;
  }

  .vehicle-card.default:hover {
    background-color: rgba(207, 232, 98, 0.3);
    background-blend-mode: overlay;
  }

  .vehicle-card.outlined:hover {
    background-color: rgba(200, 246, 0, 0.15);
    background-blend-mode: overlay;
  }
</style>
